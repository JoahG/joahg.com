<header>
	<h1>
		Admin ~ Posts
	</h1>
</header>

<div>
	<% if current_user && current_user.admin? %>
		<ul>
			<% @posts.each do |post| %>
				<li> <%= link_to post.title, post %> - <%= link_to "Edit Post", edit_post_path(post) %> | <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %> </li>
			<% end %>
		</ul>
	<% else %>
		<%= render "login" %>
	<% end %>
</div>